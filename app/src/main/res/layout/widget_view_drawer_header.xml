<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/header_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="?attr/colorPrimaryLight"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/header_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:text="See what the GitHub community is most excited about today."
        android:textSize="14sp"
        android:textColor="?attr/colorPrimaryLight"/>

</RelativeLayout>